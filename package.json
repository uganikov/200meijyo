{
  "name": "map-server",
  "version": "1.0.0",
  "description": "Server for preprocessing and serving Japan union GeoJSON (N03-2025)",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "node --watch server.js",
    "prewarm:polygons:coarse": "node src/tools/prewarmPolygons.js --coarse",
    "prewarm:polygons:fine": "node src/tools/prewarmPolygons.js --fine",
    "prewarm:polygons:both": "node src/tools/prewarmPolygons.js --both",
    "prewarm:polygons:coarse:clean": "node src/tools/prewarmPolygons.js --coarse --clean",
    "prewarm:polygons:fine:clean": "node src/tools/prewarmPolygons.js --fine --clean",
    "prewarm:polygons:both:clean": "node src/tools/prewarmPolygons.js --both --clean",
    "profile:polygons:coarse": "mkdir -p profiles && node --cpu-prof --cpu-prof-dir=profiles src/tools/prewarmPolygons.js --coarse",
    "profile:polygons:fine": "mkdir -p profiles && node --cpu-prof --cpu-prof-dir=profiles src/tools/prewarmPolygons.js --fine",
    "profile:polygons:both": "mkdir -p profiles && node --cpu-prof --cpu-prof-dir=profiles src/tools/prewarmPolygons.js --both",
    "profile:polygons:coarse:clean": "mkdir -p profiles && node --cpu-prof --cpu-prof-dir=profiles src/tools/prewarmPolygons.js --coarse --clean",
    "profile:polygons:fine:clean": "mkdir -p profiles && node --cpu-prof --cpu-prof-dir=profiles src/tools/prewarmPolygons.js --fine --clean",
    "profile:polygons:both:clean": "mkdir -p profiles && node --cpu-prof --cpu-prof-dir=profiles src/tools/prewarmPolygons.js --both --clean",
    "start": "node server.js"
  },
  "dependencies": {
    "@turf/turf": "^7.3.0",
    "better-sqlite3": "^12.5.0",
    "express": "^4.19.2",
    "stream-chain": "^2.2.5",
    "stream-json": "^1.8.0",
    "unzipper": "^0.12.3"
  },
  "author": "",
  "license": "MIT"
}
